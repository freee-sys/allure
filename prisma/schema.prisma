
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(cuid())
  name String
  email String
  password String
  products Product[]
}

model Product {
  id String @id @default(cuid())
  image String
  name String
  price Int

  user User? @relation(fields: [userId], references: [id])
  userId String? @unique
}